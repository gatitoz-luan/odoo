<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_rental" model="ir.ui.view">
        <field name="name">sale.order.form.rental</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="rental_start_date" string="Início da Locação"/>
                <field name="rental_end_date" string="Fim da Locação"/>
            </xpath>
        </field>
    </record>

</odoo>
